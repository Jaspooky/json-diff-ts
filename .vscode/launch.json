    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
              "jsonDiff",
              "--config",
              "jest.config.json"
