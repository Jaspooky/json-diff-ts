{
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.m?[tj]sx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "preset": "ts-jest/presets/default-esm"
}
